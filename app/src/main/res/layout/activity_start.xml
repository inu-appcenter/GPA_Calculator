<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/text"
        style="Noto Sans CJK KR"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="22dp"
        android:layout_marginTop="74dp"
        android:text="나의전공\n입력하기"
        android:textColor="#000000"
        android:textSize="32dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:includeFontPadding="false"

        />


    <Button
        android:id="@+id/btn_major"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="학과를 입력해주세요"
        style="Noto Sans CJK KR"
        android:textSize="14dp"
        android:drawableRight="@drawable/ic_undertry"
        android:gravity="start|center_vertical"
        app:layout_constraintTop_toBottomOf="@id/text"
        app:layout_constraintBottom_toTopOf="@id/view1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:paddingStart="0dp"
        android:paddingBottom="14.5dp"
        android:paddingEnd="0dp"
        android:layout_marginTop="72dp"
        android:layout_marginStart="22dp"
        android:layout_marginEnd="26dp"
        android:layout_marginBottom="0dp"
        android:background="#00000000"
        android:textColor="#767676"
        android:includeFontPadding="false"

        />

    <View
        android:id="@+id/view1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#F0F0F0"
        app:layout_constraintTop_toBottomOf="@id/btn_major"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="0dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        />
    <Button
        android:id="@+id/btn_sID"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="학번를 입력해주세요"
        style="Noto Sans CJK KR"
        android:textSize="14dp"
        android:drawableRight="@drawable/ic_undertry"
        android:gravity="start|center_vertical"
        app:layout_constraintBottom_toTopOf="@id/view2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view1"
        app:layout_constraintEnd_toEndOf="parent"
        android:paddingStart="0dp"
        android:paddingBottom="14.5dp"
        android:paddingEnd="0dp"
        android:layout_marginStart="22dp"
        android:layout_marginTop="35.5dp"
        android:layout_marginEnd="26dp"
        android:layout_marginBottom="0dp"
        android:background="#00000000"
        android:textColor="#767676"
        android:includeFontPadding="false"

        />


    <View
        android:id="@+id/view2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#F0F0F0"
        app:layout_constraintTop_toBottomOf="@id/btn_sID"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="0dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        />



    <Button
        android:id="@+id/addMajor"
        style="Noto Sans CJK KR"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="22dp"
        android:layout_marginTop="46dp"
        android:background="#00000000"
        android:drawableLeft="@drawable/ic_blueplus"
        android:paddingLeft="0dp"
        android:paddingTop="0dp"
        android:scaleType="center"
        android:text=" 전공추가하기"
        android:textColor="#00A2FF"
        android:textSize="14dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_sID"
        android:includeFontPadding="false"
        />

    <FrameLayout
        android:id="@+id/frame"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="0dp"
        app:layout_constraintTop_toBottomOf="@+id/btn_sID"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@id/btn_page1"
        android:layout_marginTop="45dp"

        >
    </FrameLayout>

    <Button
        android:id="@+id/btn_page1"
        style="Noto Sans CJK KR"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="#E4E4E4"
        android:text="시작하기"
        android:textColor="#ffffff"
        android:textSize="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"

        />




</androidx.constraintlayout.widget.ConstraintLayout>