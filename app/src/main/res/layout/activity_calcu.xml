<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".CalcuActivity">

<ImageButton
        android:id="@+id/btn_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ic_back"
        android:background="#00000000"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="17.14dp"
        android:layout_marginTop="17.32dp"
        android:padding="2dp"
        tools:layout_editor_absoluteX="62dp"
        tools:layout_editor_absoluteY="195dp" />

    <TextView
        android:id="@+id/tv1_1"
        style="Noto Sans CJK KR"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16.31dp"
        android:layout_marginTop="17dp"
        android:includeFontPadding="false"
        android:text="계산기"
        android:textColor="#000000"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@id/btn_back"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv1_2"
        style="Noto Sans CJK KR"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="40dp"
        android:includeFontPadding="false"
        android:text="1. 나는 막학기에"
        android:textColor="#000000"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv1_1" />

    <EditText
        android:id="@+id/et1"
        android:layout_width="132dp"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:hint="최소학점 (9학점)"
        style="Noto Sans CJK KR"
        android:textColorHint="#767676"
        android:textSize="16dp"
        android:paddingBottom="0dp"
        android:paddingTop="0dp"
        android:padding="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv1_2"
        app:layout_constraintEnd_toStartOf="@id/tv1_3"
        app:layout_constraintBottom_toTopOf="@id/tv1_4"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="36dp"
        android:layout_marginTop="24dp"
        android:gravity="center"
        android:includeFontPadding="false"
        android:background="@null"
        android:cursorVisible="false"
        />

    <View
        android:id="@+id/view1"
        android:layout_width="132dp"
        android:layout_height="1dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/et1"
        android:layout_marginStart="32dp"
        android:layout_marginTop="4.5dp"
        android:background="#F0F0F0"
        />
    <TextView
        android:id="@+id/tv1_3"
        style="Noto Sans CJK KR"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="학점을"
        android:textColor="#000000"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@id/et1"
        app:layout_constraintTop_toBottomOf="@id/tv1_2"
        android:layout_marginStart="10dp"
        android:layout_marginTop="20dp"
        android:includeFontPadding="false"
        />

    <TextView
        android:id="@+id/tv1_4"
        style="Noto Sans CJK KR"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="들을 예정입니다."
        android:textColor="#000000"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/et1"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="32dp"
        android:layout_marginTop="17dp"
        android:includeFontPadding="false"
        />

    <TextView
        android:id="@+id/tv2_1"
        style="Noto Sans CJK KR"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2. 나는 남은학기 동안"
        android:textColor="#000000"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv1_4"
        android:layout_marginStart="32dp"
        android:layout_marginTop="80dp"
        android:includeFontPadding="false"
        />

    <Button
        android:id="@+id/btn_selec1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="전공학점을"
        android:textSize="20dp"
        style="Noto Sans CJK KR"
        android:textStyle="bold"
        android:textColor="#CCCCCC"
        app:layout_constraintTop_toBottomOf="@id/tv2_1"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginStart="32dp"
        android:background="#00000000"
        android:minHeight="0dp"
        android:minWidth="0dp"
        android:paddingTop="0dp"
        android:paddingStart="0dp"
        android:paddingEnd="0dp"
        android:paddingBottom="0dp"
        android:includeFontPadding="false"
        />
    <Button
        android:id="@+id/btn_selec2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="교양학점을"
        android:textSize="20dp"
        style="Noto Sans CJK KR"
        android:textStyle="bold"
        android:textColor="#CCCCCC"
        app:layout_constraintTop_toBottomOf="@id/tv2_1"
        app:layout_constraintStart_toEndOf="@id/btn_selec1"
        android:layout_marginTop="16dp"
        android:layout_marginStart="40dp"
        android:background="#00000000"
        android:minHeight="0dp"
        android:minWidth="0dp"
        android:paddingTop="0dp"
        android:paddingStart="0dp"
        android:paddingEnd="0dp"
        android:paddingBottom="0dp"
        android:includeFontPadding="false"
        />
    <TextView
        android:id="@+id/tv2_2"
        style="Noto Sans CJK KR"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="먼저 더 채울래요."
        android:textColor="#000000"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_selec1"
        android:layout_marginStart="32dp"
        android:layout_marginTop="16dp"
        android:includeFontPadding="false"
        />
    <TextView
        android:id="@+id/tv3_1"
        style="Noto Sans CJK KR"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="3. 나의 목표 성적은"
        android:textColor="#000000"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv2_2"
        android:layout_marginStart="32dp"
        android:layout_marginTop="80dp"
        android:includeFontPadding="false"
        />
    <View
        android:id="@+id/view2"
        android:layout_width="132dp"
        android:layout_height="1dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv3_1"
        android:layout_marginStart="32dp"
        android:layout_marginTop="49.5dp"
        android:background="#F0F0F0"
        />

    <TextView
        android:id="@+id/tv3_2"
        style="Noto Sans CJK KR"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="20dp"
        android:includeFontPadding="false"
        android:text="학점입니다."
        android:textColor="#000000"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@id/view2"
        app:layout_constraintTop_toBottomOf="@id/tv3_1"
        />

    <Button
        android:id="@+id/btn_page2"
        style="Noto Sans CJK KR"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="#E4E4E4"
        android:text="계산하기"
        android:textColor="#ffffff"
        android:textSize="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:includeFontPadding="false"
        />
    <Button
        android:id="@+id/btn_hg"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@id/view2"
        app:layout_constraintStart_toStartOf="@id/view2"
        app:layout_constraintTop_toBottomOf="@id/tv3_1"
        app:layout_constraintEnd_toEndOf="@id/view2"
        android:layout_marginTop="21dp"
        android:layout_marginEnd="0dp"
        android:layout_marginStart="0dp"
        android:gravity="center"
        android:includeFontPadding="false"
        android:textColor="#FCAF17"
        style="#FCAF17"
        android:textStyle="bold"
        android:textSize="20dp"
        />


</androidx.constraintlayout.widget.ConstraintLayout>