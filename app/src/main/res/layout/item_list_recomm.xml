<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="2dp"
    app:cardElevation="3dp"
    app:cardUseCompatPadding="true"
    >
    <LinearLayout
        android:id="@+id/linearlayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:elevation="5dp"
        android:background="@drawable/view_shape_expend"
        >
        <RelativeLayout
            android:id="@+id/header"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:orientation="horizontal"
            >
            <TextView
                android:id="@+id/tv1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="Noto Sans CJK KR"
                android:textColor="#000000"
                android:textSize="14dp"
                android:text="3학년 1학기"
                android:includeFontPadding="false"
                android:layout_alignParentStart="true"
                android:layout_marginStart="16dp"
                android:layout_marginTop="14dp"

                />

            <TextView
                android:id="@+id/tv2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="Noto Sans CJK KR"
                android:textColor="#767676"
                android:textSize="12dp"
                android:text="전공"
                android:includeFontPadding="false"
                android:layout_toStartOf="@+id/tv3"
                android:layout_marginEnd="6dp"
                android:layout_marginTop="15dp"
                />

            <TextView
                android:id="@+id/tv3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="Noto Sans CJK KR"
                android:textColor="#000000"
                android:textSize="14dp"
                android:text="5과목"
                android:includeFontPadding="false"
                android:layout_toStartOf="@+id/tv4"
                android:layout_marginEnd="15dp"
                android:layout_marginTop="14dp"
                />

            <TextView
                android:id="@+id/tv4"
                style="Noto Sans CJK KR"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toStartOf="@+id/tv5"
                android:layout_marginEnd="6dp"
                android:includeFontPadding="false"
                android:text="교양"
                android:textColor="#767676"
                android:textSize="12dp"
                android:layout_marginTop="15dp"
                />

            <TextView
                android:id="@+id/tv5"
                style="Noto Sans CJK KR"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toStartOf="@+id/btn_detail"
                android:layout_marginEnd="22dp"
                android:includeFontPadding="false"
                android:text="5과목"
                android:textColor="#000000"
                android:textSize="14dp"
                android:layout_marginTop="14dp"
                />

            <ImageView
                android:id="@+id/btn_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:includeFontPadding="false"
                app:srcCompat="@drawable/ic_undertry"
                android:layout_alignParentEnd="true"
                android:background="#00000000"
                android:layout_marginEnd="22dp"
                android:layout_marginTop="21dp"
                android:layout_marginBottom="20dp"


                />
        </RelativeLayout>
        <LinearLayout
            android:id="@+id/expendableLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            <LinearLayout
                android:id="@+id/li1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingStart="16dp"
                >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="∙전공 3학점"
                android:textColor="#767676"
                android:textSize="14dp"
                style="Noto Sans CJK KR"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="∙전공 2학점"
                android:textColor="#767676"
                android:textSize="14dp"
                style="Noto Sans CJK KR"
                />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="∙전공 1학점"
                    android:textColor="#767676"
                    android:textSize="14dp"
                    style="Noto Sans CJK KR"
                   />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/li2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_toEndOf="@+id/li1"
                android:layout_marginStart="40dp"


                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1과목"
                    android:textColor="#B1DC0D"
                    android:textSize="14dp"
                    style="Noto Sans CJK KR"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2과목"
                    android:textColor="#B1DC0D"
                    android:textSize="14dp"
                    style="Noto Sans CJK KR"
                   />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2과목"
                    android:textColor="#B1DC0D"
                    android:textSize="14dp"
                    style="Noto Sans CJK KR"
                    />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/li3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_toStartOf="@+id/li4"

                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="∙교양 3학점"
                    android:textColor="#767676"
                    android:textSize="14dp"
                    style="Noto Sans CJK KR"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="∙교양 2학점"
                    android:textColor="#767676"
                    android:textSize="14dp"
                    style="Noto Sans CJK KR"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="∙교양 1학점"
                    android:textColor="#767676"
                    android:textSize="14dp"
                    style="Noto Sans CJK KR"
                    />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/li4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="16dp"
                android:layout_marginStart="40dp"

                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1과목"
                    android:textColor="#0A57A5"
                    android:textSize="14dp"
                    style="Noto Sans CJK KR"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2과목"
                    android:textColor="#0A57A5"
                    android:textSize="14dp"
                    style="Noto Sans CJK KR"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2과목"
                    android:textColor="#0A57A5"
                    android:textSize="14dp"
                    style="Noto Sans CJK KR"
                 />
            </LinearLayout>
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>


</androidx.cardview.widget.CardView>